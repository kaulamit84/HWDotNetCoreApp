@using HWRestaurant.Core
@model Restaurant

<div class="card mb-4 box-shadow" style="border-color: darkcyan">
    <div class="card-header">
        <h3>@Model.Name</h3>
    </div>
    <div class="card-body">
        <span><strong>Location: </strong>@Model.Location</span>
        <p><strong>Cuisine: </strong>@Model.Cuisine</p>
    </div>
    <div class="card-footer">
        <a class="btn btn-lg"
           asp-page="./Detail"
           asp-route-restaurantId="@Model.id">
            <i class="glyphicon glyphicon-zoom-in"></i>
        </a>
        <a class="btn btn-lg"
           asp-page="./Edit"
           asp-route-restaurantId="@Model.id">
            <i class="glyphicon glyphicon-edit"></i>
        </a>
        <a class="btn btn-lg"
           asp-page="./Delete"
           asp-route-restaurantId="@Model.id">
            <i class="glyphicon glyphicon-trash"></i>
        </a>
    </div>
</div>